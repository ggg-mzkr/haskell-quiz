{% extends 'Admin/layout.html.twig' %}

{% block title %}Login{% endblock %}

{% block body_class %}{% endblock %}

{% form_theme form 'Admin/form/theme.html.twig' %}

{% block body %}

    <div class="container">

    {% for flashType,flashMessages in app.session.flashBag.all %}
        {% for flashMessage in flashMessages %}
            <div class="alert alert-{{ flashType }} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card card-login mx-auto mt-5">
        <div class="card-header">ログイン</div>
        <div class="card-body">
            {{ form_start(form, {action: path('admin_login_check')}) }}
            {{ form_rest(form) }}
             <button type="submit" class="btn btn-primary btn-block">ログイン</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
