{% extends 'Front/user_reset_password/layout.html.twig' %}

{% block title %}パスワード再設定{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>登録</h1>
    </div>
    {% for flashType,flashMessages in app.session.flashBag.all %}
        {% for flashMessage in flashMessages %}
            <div class="alert alert-{{ flashType }} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        {{ form_start(form) }}
                        {{ form_rest(form) }}
                        <a class="btn btn-secondary" href="{{ path('front_index') }}">戻る</a>
                        <button type="submit" class="btn btn-primary">送信</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
