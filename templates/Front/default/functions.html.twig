{% extends 'Front/layout.html.twig' %}

{% block title %}Haskell Quiz/関数リファレンス{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('vendor/highlight.js/css/github.css') }}">
{% endblock %}

{% block main %}
    <h1 class="text-center display-4">
        関数リファレンス
    </h1>
    <hr class="my-4">


    <div class="row">
        {% for function in functions %}
            <div class="col-md-6 col-sm-12 mb-5">
                <div class="card">
                    <div class="card-header cyan white-text">
                        {{ function.name }}
                    </div>
                    <div class="card-body">
                        <pre>
                            <code>
{{ function.description }}
                            </code>
                        </pre>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendor/highlight.js/js/highlight.pack.js') }}"></script>
    <script>hljs.initHighlightingOnLoad();</script>
{% endblock %}