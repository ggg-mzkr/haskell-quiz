{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('vendor/MDBFree/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('vendor/MDBFree/css/mdb.min.css') }}">
    <link rel="stylesheet" href="{{ asset('build/css/front.css') }}">
{% endblock %}

{% block body_class %}pt-5{% endblock %}

{% if form is defined %}
    {% form_theme form 'Front/form/theme.html.twig' %}
{% endif %}

{% block body %}
    <nav class="fixed-top mb-3 navbar navbar-expand-lg navbar-dark cyan">
        <a class="navbar-brand" href="{{ path('front_index') }}">
            Haskell Quiz
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#frontTopNav" aria-controls="frontTopNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        {% if is_granted('ROLE_USER') %}
        <div class="collapse navbar-collapse" id="frontTopNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('front_mypage') }}">マイページ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('front_logout') }}">ログアウト</a>
                </li>
            </ul>
        </div>
        {% endif %}
    </nav>

    <main class="mt-5">
        <div class="container">
            {% block main %}
            {% endblock %}
        </div>
    </main>

    {% block footer %}
        <footer class="page-footer text-center text-md-left font-small cyan pt-4 mt-4">
            <div class="container-fluid text-center text-md-left">
                <div class="row">
                    <div class="col-md-6 pb-3">
                        <h5 class="text-uppercase">Haskell Quiz</h5>
                        <p>開発に興味がある方は是非ご連絡ください．</p>
                    </div>
                    <div class="col-md-6 pb-3">
                        <h5 class="text-uppercase">Contact</h5>
                        <ul class="list-unstyled">
                            <li>
                                <a href="mailto:im181009@cis.aichi-pu.ac.jp">堀内哲煕 (im181009@cis.aichi-pu.ac.jp)</a>
                            </li>
                            <li>
                                <a href="mailto:im182002@cis.aichi-pu.ac.jp">伊東忠彦 (im182002@cis.aichi-pu.ac.jp)</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="footer-copyright py-3 text-center">
                © 2018 Copyright:
                <a href="http://www.ist.aichi-pu.ac.jp/lab/yamamoto/">Yamamoto lab.</a>
            </div>
        </footer>
    {% endblock %}

{% endblock %}

{% block javascripts %}
    {#{{ parent() }}#}
    <script src="{{ asset('vendor/MDBFree/js/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('vendor/MDBFree/js/popper.min.js') }}"></script>
    <script src="{{ asset('vendor/MDBFree/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('vendor/MDBFree/js/mdb.min.js') }}"></script>
    <script>
        $(function () {
            $('[data-toggle="popover"]').popover()
        })
    </script>
{% endblock %}