{% extends 'Front/layout.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <div class="container">
        <div class="page-header">
            <h1>ログイン</h1>
        </div>
        {% for flashType,flashMessages in app.session.flashBag.all %}
            {% for flashMessage in flashMessages %}
                <div class="alert alert-{{ flashType }} alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row justify-content-md-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form, {action: path('front_login_check')}) }}
                        {{ form_rest(form) }}
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">ログイン</button>
                        </div>
                        {{ form_end(form) }}
                        <div class="text-right">
                            <a href="{{ path('user_reset_password_index') }}">パスワード再設定</a>
                            <a href="{{ path('user_register_index') }}">登録</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
